CC = gcc
SRC = main.c school.c
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic


all: $(if $(realpath m.h), $(OBJ),)
	$(if $(realpath m.h), $(CC) $(OBJ) -o $(NAME),)


base_clean = $(RM) $(1)

clean:
	$(call base_clean, $(wildcard *.swp) $(wildcard *~) $(wildcard .#*) $(NAME) )

oclean:
	$(call base_clean, $(OBJ))

fclean: clean oclean

re: fclean all
